%% bib management
\RequirePackage[backend=biber, style=alphabetic, citestyle=alphabetic, natbib=true]{biblatex}

% src: http://codydunne.blogspot.com/2012/01/suppressing-bibtex-fields-for-specific.html 

\AtEveryBibitem{
	\clearfield{isbn}
	\clearfield{issn}
	\clearfield{url}
	\clearfield{doi}
	\ifentrytype{book}{}{% Remove publisher and editor except for books
		\clearlist{publisher}
		\clearname{editor}
	}
}

